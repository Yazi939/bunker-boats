{
  "name": "fuel-app",
  "private": true,
  "version": "1.0.0",
  "description": "Fuel management application",
  "author": "Your Name",
  "type": "module",
  "main": "src/main/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "start": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5176 && npm run electron:dev\"",
    "server": "cd server && npm start",
    "start:all": "concurrently \"npm run start\" \"npm run server\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --dir",
    "package": "electron-builder --win --x64",
    "package:mac": "electron-builder --mac",
    "make-exe": "npm run build && npm run package",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"No tests specified\" && exit 0",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.bunkerboats.app",
    "productName": "Bunker Boats",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "darkModeSupport": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bunker Boats",
      "include": "installer.nsh",
      "perMachine": true,
      "artifactName": "BunkerBoats-Setup.exe",
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png",
      "installerHeaderIcon": "assets/icon.png"
    },
    "nsisWeb": {
      "additionalConfigurations": {
        "include": "installer.nsh"
      }
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-router-dom": "^5.3.3",
    "antd": "^5.15.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "electron": "^28.0.0",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.5.2",
    "recharts": "^2.12.2",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/moment": "^2.11.29",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-big-calendar": "^1.16.1",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "react-devtools": "^4.28.0",
    "vite": "^5.0.0"
  }
}
